{% extends 'base.html.twig' %}
{% block title %}{{ program.title }} S{{ season.number }} Ep {{ episode.number }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">

            <h1 class="mt-0">{{ program.title }}</h1>
            <h2 class="mt-0">Saison {{ season.number }}</h2>
            <h2 class="mt-0">Épisode {{ episode.number }} : {{ episode.title }}</h2>

            <p>Synopsis:</p>
            <p>{{ episode.synopsis }}</p>
        </div>
    </div>


    <a href="{{ path('wild_program_season', {"id": season.id }) }}">
        Retour à la saison
    </a>
    <br>
    <a href="{{ path('wild_program', {"slug": program.title }) }}">
        Retour à la série
    </a>
    <br>
    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}